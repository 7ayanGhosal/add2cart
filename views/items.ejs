	<div  class="conatiner-fluid w-100 overflow-hidden">
		<div style="font-family: 'Cinzel', serif;" class="row row-cols-4 border p-2 my-2 justify-content-around">
			<% for(var i=0; i<cat.elements.length; i++) { %>
			<div  class="col col-9 col-sm-5 col-lg-3 col-xl-2 col-test">
				<div class="w-100 division-1">
					<p><span class="price p-0 m-0"><%- cat.elements[i].price%></span> <span class="add-to-cart p-0 m-0">
						<form action="/add-to-cart/<%-cat.row%>/<%-cat.col%>" method="post">
							<%if(login == true){%>
								<input  class="d-none" name = "email" value = "<%- user.email%>" />
								<input  class="d-none" name = "password" value = "<%- user.password%>" />
							<% }else {%>
								<input  class="d-none" name = "email" value = "null" />
								<input  class="d-none" name = "password" value = "null" />
							<%}%>
							<input  class="d-none" name = "title" value = "<%-cat.elements[i].title%>" />
							<input  class="d-none" name = "price" value = "<%- cat.elements[i].price%>" />
							<input  class="d-none" name = "image" value = "<%- cat.elements[i].image%>" />
							<input  class="d-none" name = "quantity" type="NUMBER" value = "1" />
								<button type="submit" class="btn btn-outline-warning" ><i class="fas fa-cart-plus"></i></button>
						</form>
					</span></p>
				</div>
				<div class="w-100 images division-2">
					<img class="img-thumbnail" src="<%- cat.elements[i].image%>">
				</div>
				<div class="w-100 bg-black division-3">
					<p class="title"><%- cat.elements[i].title%></p>
					<p><span class="rating"><i class="fas fa-star"></i> <%- cat.elements[i].rating%></span> <span class="number-of-ratings"><%- cat.elements[i].noOfRating%></span></p>
				</div>
			</div>
			
